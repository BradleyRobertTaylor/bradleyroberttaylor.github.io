---
interface Props {
  title: string;
  anchorTarget?: astroHTML.JSX.HTMLAttributeAnchorTarget;
  items: {
    title: string;
    description: string;
    link: string;
    author?: string;
  }[];
}

const { title, items, anchorTarget } = Astro.props;
---

<section class="flex flex-col gap-4">
  <h2 class="font-semibold">{title}</h2>
  <div class="flex flex-col gap-1">
    {
      items.map((item) => (
        <a
          href={item.link}
          target={anchorTarget}
          class="flex flex-col hover:bg-neutral-100 dark:hover:bg-neutral-900 py-3 px-3 -mx-3 rounded-lg"
        >
          <span class="font-medium">{item.title}</span>
          <span class="text-neutral-500 dark:text-neutral-400">
            {item.description}
          </span>
        </a>
      ))
    }
  </div>
</section>
